CC = clang
OPTIONS = -std=c11 -O3 -DNDEBUG
WARNINGS = -Weverything -pedantic
WARNINGS += -Wno-padded -Wno-switch-enum
COMPILE = $(CC) $(OPTIONS) $(WARNINGS) -c
LINK = $(CC) -lreadline

: foreach src/*.c |> ^ CC %f^ $(COMPILE) %f -o %o |> build/%B.o
: build/*.o |> ^ Linking binary "eva"^ $(LINK) %f -o %o |> bin/eva
